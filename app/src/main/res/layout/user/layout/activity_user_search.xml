<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:background="@color/QuickTalk_NAVBAR_BG_COLOR">

        <EditText
            android:id="@+id/activity_user_search_field"
            android:layout_width="match_parent" android:layout_height="30dp"
            android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
            android:textSize="15sp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:drawableLeft="@mipmap/search"
            android:drawablePadding="4dp"
            android:inputType="text" android:singleLine="true"
            android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
            android:hint="手机号/昵称" android:background="@drawable/shape_corner"
            android:layout_marginLeft="10dp" android:layout_marginRight="60dp"
            android:layout_centerVertical="true"
            />
        <Button
            android:id="@+id/activity_user_search_cancel"
            android:layout_width="60dp" android:layout_height="match_parent"
            android:text="取消" android:textColor="@drawable/selector_button"
            android:textSize="15sp"
            style="?android:attr/borderlessButtonStyle"
            android:layout_centerVertical="true" android:layout_alignParentRight="true"
            />

    </RelativeLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/activity_user_search_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_user_search_recyclerview"
            android:divider="#ffff0000"
            android:dividerHeight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>