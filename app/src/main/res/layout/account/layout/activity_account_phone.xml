<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:id="@+id/activity_account_phone_phone"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR" android:textSize="15sp"
        android:inputType="text" android:singleLine="true"
        android:textCursorDrawable="@drawable/color_cursor"
        android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
        android:hint="手机号" android:background="@color/white"
        android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp" android:layout_marginTop="20dp"
        />

    <RelativeLayout
        android:layout_width="match_parent" android:layout_margin="10dp"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/activity_account_phone_code"
            android:layout_width="120dp" android:layout_height="match_parent"
            android:textColor="@color/QuickTalk_SECOND_FONT_COLOR" android:textSize="15sp"
            android:inputType="text" android:singleLine="true"
            android:textCursorDrawable="@drawable/color_cursor"
            android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
            android:hint="验证码" android:background="@color/white"
            android:layout_gravity="left|center_vertical"
            />
        <Button
            android:id="@+id/activity_account_phone_get_code"
            android:layout_width="100dp" android:layout_height="match_parent"
            android:text="获取验证码" android:textColor="@drawable/selector_button"
            android:textSize="14sp"
            android:layout_alignParentRight="true"
            android:background="@drawable/ripple_button_bg"
            style="?android:attr/borderlessButtonStyle"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/activity_account_phone_submit"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:text="提交" android:textColor="@drawable/selector_button"
        android:textSize="14sp"
        android:background="@drawable/ripple_button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="10dp"
        />

</LinearLayout>