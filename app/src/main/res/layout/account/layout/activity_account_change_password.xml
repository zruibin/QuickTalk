<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <EditText
        android:id="@+id/activity_account_chanage_password_old"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="text" android:singleLine="true"
        android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
        android:hint="请输入旧密码" android:background="@color/white"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp" android:layout_marginTop="20dp"
        />

    <EditText
        android:id="@+id/activity_account_chanage_password_new"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="text" android:singleLine="true"
        android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
        android:hint="请输入新的密码" android:background="@color/white"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp" android:layout_marginTop="2dp"
        />

    <EditText
        android:id="@+id/activity_account_chanage_password_comfirm"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
        android:textSize="15sp"
        android:textCursorDrawable="@drawable/color_cursor"
        android:inputType="text" android:singleLine="true"
        android:gravity="left|center" android:paddingLeft="5dp" android:paddingRight="5dp"
        android:hint="确认新的密码" android:background="@color/white"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp" android:layout_marginTop="2dp"
        />

    <TextView
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:text="若是通过第三方登录则初始密码为空，修改成功后需要重新登录"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
        android:textSize="12sp"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginBottom="2dp" android:layout_marginTop="2dp"
        />

    <Button
        android:id="@+id/activity_account_chanage_password_submit"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:text="提交" android:textColor="@drawable/selector_button"
        android:textSize="14sp"
        android:background="@drawable/ripple_button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="15dp" android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        />

</LinearLayout>