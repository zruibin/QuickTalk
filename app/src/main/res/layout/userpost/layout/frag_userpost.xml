<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/userpost_toolbar"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/QuickTalk_NAVBAR_BG_COLOR"
        android:minHeight="22dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </android.support.v7.widget.Toolbar>

    <com.creactism.quicktalk.components.Navigationbar
        android:id="@+id/userpost_navigationbar"
        android:layout_below="@+id/userpost_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@color/QuickTalk_NAVBAR_BG_COLOR">
    </com.creactism.quicktalk.components.Navigationbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userpost_navigationbar"
        android:text="TextView"
        android:textSize="20sp"
        android:height="80dp"
        android:background="@color/blueviolet"
        android:gravity="center"/>

</RelativeLayout>