<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/QuickTalk_VIEW_BG_COLOR">

    <View android:layout_height="20dp" android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@color/white">
        <TextView
            android:layout_width="100dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="评论"/>
        <Switch
            android:theme="@style/QTSwitch"
            android:id="@+id/activity_notification_setting_comment"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_width="60dp" android:layout_height="wrap_content"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@color/white">
        <TextView
            android:layout_width="100dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="赞"/>
        <Switch
            android:theme="@style/QTSwitch"
            android:id="@+id/activity_notification_setting_like"
            android:layout_width="60dp" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginRight="10dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@color/white">
        <TextView
            android:layout_width="100dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="新的关注"/>
        <Switch
            android:theme="@style/QTSwitch"
            android:id="@+id/activity_notification_setting_star"
            android:layout_width="60dp" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/gray" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@color/white">
        <TextView
            android:layout_width="100dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="新的分享"/>
        <Switch
            android:theme="@style/QTSwitch"
            android:id="@+id/activity_notification_setting_share"
            android:layout_width="60dp" android:layout_height="wrap_content"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/gray" />

</LinearLayout>