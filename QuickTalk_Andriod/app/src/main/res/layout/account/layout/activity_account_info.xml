<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/QuickTalk_VIEW_BG_COLOR">

    <View android:layout_height="20dp" android:layout_width="match_parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@drawable/ripple_bg"
        android:onClick="onIconItemClick">
        <TextView
            android:layout_width="50dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="14sp" android:text="头像"/>
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/activity_account_info_avatar"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            fresco:placeholderImage="@mipmap/avatar_default" fresco:placeholderImageScaleType="centerCrop"
            fresco:failureImage="@mipmap/avatar_default" fresco:failureImageScaleType="centerCrop"
            android:layout_width="40dp" android:layout_height="40dp"
            android:layout_alignParentRight="true" android:layout_marginRight="30dp"
            android:layout_centerVertical="true" android:padding="4dp"/>
        <ImageView
            android:layout_width="14dp" android:layout_height="14dp"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp" android:src="@mipmap/indicator"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />


    <View
        android:layout_width="match_parent" android:layout_marginTop="20dp"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />
    <RelativeLayout
        android:onClick="onNicknameItemClick"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@drawable/ripple_bg">
        <TextView
            android:layout_width="50dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="14sp" android:text="昵称"/>
        <TextView
            android:id="@+id/activity_account_info_nickname"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:layout_centerVertical="true" android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="小密码"/>
        <ImageView
            android:layout_width="14dp" android:layout_height="14dp"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp" android:src="@mipmap/indicator"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />
    <RelativeLayout
        android:onClick="onGenderItemClick"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@drawable/ripple_bg">
        <TextView
            android:layout_width="50dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="14sp" android:text="性别"/>
        <TextView
            android:id="@+id/activity_account_info_gender"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:layout_centerVertical="true" android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="男"/>
        <ImageView
            android:layout_width="14dp" android:layout_height="14dp"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp" android:src="@mipmap/indicator"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />
    <RelativeLayout
        android:onClick="onAreaItemClick"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:orientation="horizontal" android:background="@drawable/ripple_bg">
        <TextView
            android:layout_width="50dp" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:textColor="@color/gray"
            android:textSize="14sp" android:text="地区"/>
        <TextView
            android:id="@+id/activity_account_info_area"
            android:layout_width="wrap_content" android:layout_height="match_parent"
            android:gravity="left|center" android:paddingLeft="10dp"
            android:layout_centerVertical="true" android:layout_marginLeft="40dp"
            android:textColor="@color/black"
            android:textSize="14sp" android:text="深圳市"/>
        <ImageView
            android:layout_width="14dp" android:layout_height="14dp"
            android:layout_alignParentRight="true" android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="12dp" android:src="@mipmap/indicator"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp" android:background="@color/QuickTalk_VIEW_BG_COLOR" />

</LinearLayout>