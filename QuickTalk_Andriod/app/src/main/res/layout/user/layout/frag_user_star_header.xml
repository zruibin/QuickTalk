<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginBottom="1dp"
    android:orientation="vertical"
    android:background="@color/QuickTalk_VIEW_BG_COLOR">

    <RelativeLayout
        android:id="@+id/frag_user_star_header_search"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:background="@drawable/ripple_bg">
        <ImageView
            android:layout_width="40dp" android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:src="@mipmap/search" android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="20dp"
            android:text="搜索" android:textColor="@color/black" android:textSize="15sp"
            android:layout_marginLeft="60dp" android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="20dp"
            android:text="通过手机号与昵称搜索" android:textColor="@color/QuickTalk_SECOND_FONT_COLOR" android:textSize="14sp"
            android:layout_marginLeft="60dp" android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent" android:layout_height="0.5dp"
        android:background="@color/lightgray"/>

    <RelativeLayout
        android:id="@+id/frag_user_star_header_contact"
        android:layout_width="match_parent"
        android:layout_height="50dp" android:background="@drawable/ripple_bg">
        <ImageView
            android:layout_width="40dp" android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" android:layout_marginTop="5dp" android:layout_marginBottom="5dp"
            android:src="@mipmap/contact" android:padding="5dp"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="20dp"
            android:text="通讯录" android:textColor="@color/black" android:textSize="15sp"
            android:layout_marginLeft="60dp" android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"/>
        <TextView
            android:layout_width="wrap_content" android:layout_height="20dp"
            android:text="从通讯录导入" android:textColor="@color/QuickTalk_SECOND_FONT_COLOR" android:textSize="14sp"
            android:layout_marginLeft="60dp" android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:text="我的关注" android:textSize="12sp"
        android:paddingLeft="10dp"
        android:textColor="@color/QuickTalk_SECOND_FONT_COLOR"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"/>

</LinearLayout>
