<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
        android:id="@+id/activity_welcome_viewpager"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp">
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/activity_welcome_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/activity_welcome_viewpager"
        android:layout_marginTop="100dp"
        android:gravity="center_horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/activity_welcome_Button"
        android:layout_width="match_parent" android:layout_height="40dp"
        android:text="进入快言" android:textColor="@drawable/selector_button"
        android:textSize="16sp"
        android:background="@drawable/ripple_button_bg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_marginLeft="14dp" android:layout_marginRight="15dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>